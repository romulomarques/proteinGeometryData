{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build bp.exe",
            "type": "shell",
            "command": "make",
            "args": [
                "bp.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/solvers/bp"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the solver bp.exe with debug flags"
        },
        {
            "label": "build sbbu.exe",
            "type": "shell",
            "command": "make",
            "args": [
                "sbbu.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/solvers/sbbu"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the solver sbbu.exe with debug flags"
        },
        {
            "label": "build sbbu_dbg.exe",
            "type": "shell",
            "command": "make",
            "args": [
                "sbbu_dbg.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/solvers/sbbu"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the solver sbbu.exe with debug flags"
        }
    ]
}