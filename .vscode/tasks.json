{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build bp.exe",
            "type": "shell",
            "command": "make debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the project with debug flags"
        },
        {
            "label": "build sbbu.exe",
            "type": "shell",
            "command": "make", 
            "args": [
                "sbbu/sbbu.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/sbbu"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task by debugging setup."
        }        
    ]
}
